generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Chat {
  id        String    @id @default(cuid())
  title     String
  messages  Message[]
  createdAt DateTime  @default(now())
}

model Message {
  id      String @id @default(cuid())
  role    String
  content String
  chatId  String
  chat    Chat   @relation(fields: [chatId], references: [id], onDelete: Cascade)
}
